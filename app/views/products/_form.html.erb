<%= form_with model: product do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.rich_text_area :description %>
    </div>

    <div>
      <%= form.label :featured_image, style: "display: block" %>
      <%= form.file_field :featured_image, accept: "image/*" %>
    </div>

    <div>
      <%= form.label :inventory_count, style: "display: block" %>
      <%= form.number_field :inventory_count %>
    </div>

    <div>
    <%= form.label :price %>
    <!-- Chia giá trị price (pence) cho 100 để hiển thị dạng tiền tệ -->
    <%= form.number_field :price, step: 0.01, value: @product.price.to_f / 100.0 %>
  </div>

    <div>
      <%= form.label :brand %>
      <%= form.collection_select :brand_id, Brand.all, :id, :name, prompt: "--- Choose a brand ---" %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  